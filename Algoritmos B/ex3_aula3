#include <stdio.h>
#include <stdlib.h>
#include <locale.h>


float INSS(float s){
    if(s <= 1302){
        return s*0.075;
    }
    else if(s <= 2571.29){
        return s*0.09;
    }
    else if(s <= 3856.94){
        return s*0.12;
    }
    else if(s <= 7507.49){
        return s*0.14;
    }
    else{
        printf("Sem desconto para o INSS.");
    }
}

float IRPF(float s){
    if(s <= 2112){
        return 0;
    }
    else if(s <= 2826.65){
        return s*0.075;
    }
    else if(s <= 3751.05){
        return s*0.15;
    }
    else if(s <= 4664.68){
        return s*0.225;
    }
    else{
        return s*0.275;
    }
}

float calculaSDolar(float s, float d){
    float sD;

    sD = s/d;

    return sD;
}

int main(){

    setlocale(LC_ALL,"Portuguese");

    float salarioB, descINSS, descIRPF, salarioDolar, dolar;

    printf("Qual o sal치rio bruto do fucion치rio (em R$): ");
    scanf("%f", &salarioB);

    descINSS = INSS(salarioB);
    printf("Desconto INSS R$%.2f\n", descINSS);

    descIRPF = IRPF(salarioB);
    printf("Desconto IRPF R$%.2f\n", descIRPF);

    printf("1 Dolar equivale a quantos reais?");
    scanf("%f", &dolar);

    salarioDolar = calculaSDolar(salarioB, dolar);
    printf("Sal치rio em D칩lar U$D%.2f\n", salarioDolar);
}
